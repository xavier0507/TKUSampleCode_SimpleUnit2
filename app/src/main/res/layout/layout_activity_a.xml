<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/general_backgroud"
			  android:orientation="vertical">

	<Button
		android:id="@+id/btn_a_original"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="@string/action_a_original_button"/>

	<Button
		android:id="@+id/btn_a_clickable"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:background="@drawable/custom_button_clickable"
		android:text="@string/action_a_clickable_button"/>

</LinearLayout>
